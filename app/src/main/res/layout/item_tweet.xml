<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvUserName"
        tools:text="jinjin99" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:text="This is my tweet!!! Falcon 9â€™s first stage has landed on the Just Read the Instructions droneship!" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/tvScreenName"
        android:text="timeStamp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="Jinny"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivEmbeddedImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ivEmbeddedImage"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_toStartOf="@+id/ivRetweet"
        android:tint="@color/light_gray"
        app:srcCompat="@drawable/ic_reply" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_below="@+id/ivEmbeddedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:tint="@color/light_gray"
        app:srcCompat="@drawable/ic_vector_retweet" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:layout_below="@+id/ivEmbeddedImage"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivRetweet"
        android:tint="@color/light_gray"
        app:srcCompat="@drawable/ic_vector_heart" />
</RelativeLayout>